<button type="submit" name="home-button">
    <a href="/" style="font-size:30px">Home</a>
</button>

<div class="row">
    <div class="col-sm-6 col-sm-offset-4">
        <h1>Charity: {{donation.charity}}</h1>
        <h3>Amount: ${{donation.amount}}</h3>
        <p>Date: {{donation.date}}</p>
        <p>Notes: {{donation.notes}}</p>

        <!-- EDIT BUTTON -->
        <p><a href="/donations/{{donation._id}}/edit">Edit</a></p>
        <!-- DELETE BUTTON -->
        <p><form method="POST" action="/donations/{{donation._id}}?_method=DELETE">
            <button type="submit">Delete</button>
        </form></p>

    </div>
</div>
